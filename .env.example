# Configurações do Banco de Dados PostgreSQL
# Descomente e configure para usar PostgreSQL
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=checklist_db
# DB_USER=postgres
# DB_PASSWORD=sua_senha_aqui

# Configurações do Ambiente
NODE_ENV=development
PORT=5000

# Configuração de Banco (postgres ou sqlite)
DB_DIALECT=sqlite

# Para SQLite (padrão)
DB_STORAGE=checklist.db

# Configurações de Upload
# Sem limites de tamanho para arquivos de mídia
MAX_FILE_SIZE=unlimited